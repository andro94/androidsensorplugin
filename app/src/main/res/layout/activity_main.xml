<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andro.androidsensorstestapp.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
           >

            <TextView
                android:id="@+id/labelAccelerometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accelerometer" />

            <TextView
                android:id="@+id/txtAccelerometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="acceleration values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/labelMagneticField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Magnetic Field" />

            <TextView
                android:id="@+id/txtMagneticField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="magnetic field values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/labelUncalibratedMagneticField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uncalibrated Magnetic Field" />

            <TextView
                android:id="@+id/txtUncalibratedMagneticField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uncalibrated magnetic field values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/labelLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light" />

            <TextView
                android:id="@+id/txtLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/labelProximity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proximity" />

            <TextView
                android:id="@+id/txtProximity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proximity values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/labelTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambient Temperature" />

            <TextView
                android:id="@+id/txtTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/labelPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure" />

            <TextView
                android:id="@+id/txtPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/labelHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relative Humidity" />

            <TextView
                android:id="@+id/txtHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>


            <TextView
                android:id="@+id/labelOrientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correccion de la Orientacion" />

            <TextView
                android:id="@+id/txtOrientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orientation values"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

